@model CoreRpsCrud_Elias.ViewModels.InstractorViewModel
@{ ViewData["Title"] = "Delete"; }
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css" />
<div class="alert alert-danger">
    <h3>Do you Confirm to delete this Instractor information?</h3>
</div>
<div class="card" style="padding:40px; border-radius:50px; background-color:#AAADA8">
    <div class="card-header" style="border-radius: 30px; background-color:#4E5950;color: white">
        <h3 class="animated infinite bounce heartBeat" style="text-align:center">Delete Confirmation</h3>
    </div>
    <div class="card-body">
      
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InstractorName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InstractorName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmailAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmailAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CellPhone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CellPhone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ContactAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JoiningDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JoiningDate)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProfilePicture)
            </dt>
            <dd class="col-sm-10">
                <img src="~/Uploads/@Model.ExistingImage" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="InstractorID" />
            <button type="submit" class="btn btn-sm btn-danger rounded-0"><i class="fa fa-trash-alt"></i> Delete</button>
            @*<a asp-action="Edit" asp-route-id="@Model.InstractorID" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i> Edit</a>*@
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i> Back to List</a>
        </form>
    </div>
</div>
