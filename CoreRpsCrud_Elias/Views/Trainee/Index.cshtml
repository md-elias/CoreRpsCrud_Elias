@model IEnumerable<CoreRpsCrud_Elias.Models.Trainee>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-uppercase" style="background-color:#4E5950;color: white;border-radius: 10px;padding-left:10px;background-repeat:round">Trainee Information</h1>
<br />
<p>
    @*<a asp-action="Create" class="btn btn-primary rounded-0"><i class="fa fa-plus-circle"></i> Add New</a>*@
    <a asp-action="Create" class="btn btn-warning"><i class="fa fa-plus-circle"></i> Add New Trainee</a>
</p>
<table class="table table-bordered table-striped">
    <thead style="        background-position: left
">
        <tr style="background-color:#828580; color:white">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CellPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CellPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseName)

                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TraineeID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TraineeID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TraineeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
